<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_output_page" tools:context="com.example.userpc.sli.OutputPage">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/OutputImageView"
        android:layout_marginTop="59dp"
        android:minHeight="128dp"
        android:minWidth="128dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:src="#fd0101"
        android:contentDescription="one" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="OUTPUT"
        android:id="@+id/OutputTextView"
        android:layout_alignBottom="@+id/OutputImageView"
        android:layout_alignStart="@+id/OutputImageView"
        android:minWidth="100dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Save"
        android:id="@+id/SaveButton"
        android:layout_centerVertical="true"
        android:layout_toStartOf="@+id/OutputImageView" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ListenOutput"
        android:id="@+id/button7"
        android:layout_alignTop="@+id/SaveButton"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="57dp" />
</RelativeLayout>
